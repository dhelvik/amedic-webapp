<!DOCTYPE html>
<html lang="en">
<% include head.ejs %>
<body>
<style>
    tr:not(:first-child):hover {
        background-color: #ddd;
    }

    .table-wrapper-scroll-y {
        display: block;
        max-height: 500px;
        overflow-y: auto;
        -ms-overflow-style: -ms-autohiding-scrollbar;
    }
    .btn-space{
        margin-right:1em;
    }
</style>
<div class="container">
    <% include nav.ejs %>

    <div class="col-md-5 ">

        <div class="panel panel-default" style="min-height:350px;">
            <div class="panel-heading"><h4>Search</h4></div>
            <div class="panel-body">

                <div class="box box-info">

                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Name or LoginID" id="searchText"
                               onkeyup="fetchUsers()"/>
                        <div class="input-group-btn">
                            <button class="btn btn-primary" type="submit" id="searchButton">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </div>
                    </div>
                    <div class="table-wrapper-scroll-y">

                        <table id="usersTable" class="table">
                            <tr>
                                <th>ID</th>
                                '
                                <th>Name</th>
                                <th>LoginID</th>


                            </tr>
                            <% for (var i = 0; i < result.length;i++){ %>
                            <tr>
                                <td><%= result[i].ID %></td>
                                <td><%= result[i].name %></td>
                                <td><%= result[i].loginID %></td>

                                <% } %>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel-footer">

                <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#addUser"><span
                            class="glyphicon glyphicon-plus"></span>
                </button>




        </div>

    </div>
    </div>

    <!-- Modal -->
    <div id="addUser" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add User</h4>
                </div>
                <div class="modal-body">
                    <form id="registerUserForm">
                        <div class="form-group">
                            <label for="inputName">Name <span class="colorChange">*</span> </label>
                            <input class="form-control" name="name" id="inputName" placeholder="Name" required>
                        </div>
                        <div class="form-group">
                            <label for="inputUsername">Username <span class="colorChange">*</span></label>
                            <input class="form-control" name="loginID" id="inputUsername" placeholder="Username"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Password <span class="colorChange">*</span></label>
                            <input type="password" name="password" class="form-control" id="inputPassword"
                                   placeholder="*********" required>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Password again <span class="colorChange">*</span></label>
                            <input type="password" name="passwordAgain" class="form-control" id="inputPasswordAgain"
                                   placeholder="*********" required>
                        </div>


                        <div class="form-group">
                            <label for="role">Role</label>
                            <select id="role" name="role" class="form-control">
                                <option>Sysadmin</option>
                                <option>HE</option>
                                <option>HSA</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

                <div class="modal-footer">


                </div>

            </div>

        </div>
    </div>


    <div class="col-md-7 ">

        <div class="panel panel-default" style="min-height:350px;">
            <div class="panel-heading"><h4>User</h4></div>
            <div class="panel-body">

                <div class="box box-info">
                    <form id="userForm">
                        <div class="form-group">
                            <label for="userId">ID</label>
                            <input id="userId" class="form-control" type="text" disabled="true">
                        </div>
                        <div class="form-group">
                            <label for="userName">Name</label>

                            <input id="userName" name="userName" class="form-control user" type="text" disabled="true">
                        </div>
                        <div class="form-group">
                            <label for="userLoginID">Login ID</label>

                            <input id="userLoginID" name="userLoginID" class="form-control user" type="text"
                                   disabled="true">
                        </div>
                        <div class="form-group">

                            <label for="userPassword">Password</label>

                            <input id="userPassword" class="form-control" type="password" disabled="true">
                        </div>
                        <div class="form-group">
                            <label for="userRole">Role</label>
                            <select id="userRole" name="userRole" class="form-control user" disabled="true">

                                <option>HE</option>
                                <option>HSA</option>
                                <option>Sysadmin</option>

                            </select>
                        </div>
                        <div class="form-group">

                            <label for="userLastLogin">Last Login</label>

                            <input id="userLastLogin" class="form-control" type="text" disabled="true">
                        </div>
                    </form>
                </div>
            </div>
                <div class="panel-footer">
                    <button class="btn btn-space btn-info btn-lg" onclick="unlockFields()"><span class="glyphicon glyphicon-pencil"></span></button>
                    <button class="btn btn-space btn-success btn-edit btn-lg" onclick="saveUser()" disabled="true"><span class="glyphicon glyphicon-ok"></span></button>


                    <!-- Trigger the modal with a button -->
                    <button type="button" class="btn btn-space btn-danger btn-lg" data-toggle="modal" data-target="#myModal"
                            disabled="true"><span class="glyphicon glyphicon-trash"></span>

                    </button>

                    <!-- Dialog Modal --->
                    <!-- Modal -->
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Delete User!</h4>
                                </div>
                                <div class="modal-body">
                                    <p><span id="textChange"> <b>Are you sure you want to delete the selected user? </b></span>
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" onclick="removeUser()" class="btn btn-danger"
                                            data-dismiss="modal">Yes
                                    </button>
                                    <button type="button" class="btn btn-info" data-dismiss="modal">No</button>
                                </div>
                            </div>

                        </div>
                    </div>


                </div>


            </div>


        </div>

    </div>
</div>

</div>
<script>
    function fetchUsers() {
        var searchText = $('#searchText').val();


        $.ajax({
            type: "POST",
            url: "/users/findUserLike",
            data: {
                searchText: searchText
            },
            success: function (result) {
                if (!$.trim(result)) {
                } else {
                    $('#usersTable tbody').empty();
                    $('#usersTable tbody').append('<tr>\n' +
                        '   <th>ID</th> ' +
                        '            <th>Name</th>\n' +
                        '            <th>LoginID</th>\n' +
                        '</tr>')
                    for (var i = 0; i < result.length; i++) {

                        $('#usersTable tbody').append('<tr><td>' + result[i].ID + '<td>' + result[i].name + '</td><td>' + result[i].loginID + '</td></tr>');
                    }

                }

            },
            error: function (result) {

            }
        });

    }

    $(document).on("click", "#usersTable tr", function () {
        var $this = $(this);
        var row = $this.closest("tr");
        var id = row.find('td:first').text();

        $(".user").prop('disabled', true);
        $(".btn-success").prop('disabled', true);
        $(".btn-info").prop('disabled', false);
        $(".btn-danger").prop('disabled', false);
        $.ajax({
            type: "POST",
            url: "/users/findUser",
            data: {
                id: id
            },
            success: function (result) {

                $('#userId').val(result.ID);
                $('#userName').val(result.name);
                $('#userRole').val(result.role);
                $('#userLoginID').val(result.loginID);
                $('#userPassword').val(result.password);


                $('#userLastLogin').val(result.lastLogin);


            },
            error: function (result) {

            }
        });

    });

    function unlockFields() {
        $(".user").prop('disabled', false);
        $(".btn-edit").prop('disabled', false);
        $(".btn-info").prop('disabled', true);


    }

    function saveUser() {
        $(".user").prop('disabled', true);
        $(".btn-edit").prop('disabled', true);
        $(".btn-info").prop('disabled', false);

        $.ajax({
            type: "POST",
            url: "/users/updateUser",
            data: {
                userName: $('#userName').val(),
                userRole: $('#userRole').val(),
                userLoginID: $('#userLoginID').val()
            }
            ,
            success: function (result) {
                fetchUsers();

            },
            error: function (result) {

            }
        });
    }

    function removeUser() {
        var id = $('#userId').val();

        $('.btn-danger').prop('disabled', false);
        $.ajax({
            method: "POST",
            url: "/users/removeUser",
            data: {
                id: id
            },
            success: function (result) {
                $('#textChange').text("User deleted");
                alert("User deleted successfully");
                fetchUsers();


            },
            error: function (err) {
                console.log(err);
                throw err();

            }
        });

    }

    $('#registerUserForm').submit(function (e) {
        e.preventDefault();
        if ($('#inputPassword').val() === $('#inputPasswordAgain').val()) {
            $.ajax({
                method: 'post',
                url: '/users/register',
                data: $('#registerUserForm').serialize(),
                dataType: 'json',
                success: function (result) {
                    if (result.status = 200) {
                        alert('success');
                        $("#registerUserForm")[0].reset();
                        $('#addUser').modal('hide');
                        fetchUsers();

                    } else {
                        alert('error');
                    }
                },
                error: function (xhr, status, error) {
                    alert(status.message);
                }
            });
        } else {
            alert("Passwords doesn't match");
        }
    });
</script>
</body>
</html>